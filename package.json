{
  "name": "pm2-demo",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "Henrik Fogelberg <henrik.fogelberg@gmail.com>",
  "private": true,
  "scripts": {
    "preinstall": "npm install pm2 -g",
    "start": "npm run server | npm run vue",
    "dev": "npm run server | npm run vue",
    "vue": "cross-env NODE_ENV=development pm2 start webpack-dev-server  --name vue -- --open --hot",
    "server": "pm2 start index.js --watch --name server",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "dependencies": {
    "vue": "^2.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-latest": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "vue-loader": "^11.1.4",
    "vue-template-compiler": "^2.2.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
